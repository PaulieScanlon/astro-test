---
import CockroachLabsLogo from '../components/cockroach-labs-logo.astro';
import GitHubLogo from '../components/github-logo.astro';

import '../styles/tailwind.css';

const { title } = Astro.props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
  </head>
  <body>
    <header class='fixed w-full z-50'>
      <nav class='w-full'>
        <div class='relative flex bg-white p-4 shadow'>
          <div class='flex mx-auto w-full max-w-7xl items-center justify-between'>
            <a href='https://www.cockroachlabs.com/' target='_blank' rel='noreferrer'>
              <CockroachLabsLogo />
            </a>
            <a href='https://github.com/PaulieScanlon/astro-test' target='_blank' rel='noreferrer'>
              <GitHubLogo />
            </a>
          </div>
        </div>
        <div class='flex bg-brand-white-smoke p-4 shadow'>
          <div class='flex mx-auto w-full max-w-7xl items-center gap-4'>
            <a class='transition-colors duration-300 hover:text-brand-primary' href={`${import.meta.env.BASE_URL}`}
              >Home
            </a>
            <a class='transition-colors duration-300 hover:text-brand-primary' href={`${import.meta.env.BASE_URL}about`}
              >About
            </a>
          </div>
        </div>
      </nav>
    </header>
    <main class='prose px-4 py-36 text-brand-white w-full max-w-none min-h-screen'>
      <div class='mx-auto w-full max-w-7xl'>
        <h1>{title}</h1>
        <slot />
      </div>
    </main>
  </body>
</html>
